<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    tools:context="com.example.uttam.driver_behaviour.HomePageActivity">

    <Button
        android:id="@+id/logIn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="111dp"
        android:background="@android:color/transparent"
        android:text="LOGIN"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView323"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backgreen"
        android:layout_alignTop="@+id/logIn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView303"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backwhite"
        android:layout_alignTop="@+id/email"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView333"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backwhite"
        android:layout_alignTop="@+id/password"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="46dp"
        android:hint="Username"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp" />

</RelativeLayout>